{% extends 'base.html.twig' %}

{% block title %}List des categories !
{% endblock %}

{% block body %}
	<div class="bg-light p-3">
		<h3>List des categories :
		</h3>
	</div>
	<div class="row">
		{% for category in categories %}
			<div class="col-4 mt-4">
				<div class="border border-success bg-light rounded p-2 clearfix">
					<h4 class="m-2">
						{{ category.name }}
						<br/>
						<span class="text-black p-1 align-center font-weight-normal">{{ category.description }}
						</span>
					</h4>
					<img class="img-fluid rounded" src="images/category.jpg" alt="Image de {{ category.name }}">
					<hr>
					<a href="#" class="btn btn-success float-right">
						<i class="fas fa-trash"></i>
						Supprimer
					</a>
				</div>

			</div>
		{% endfor %}
	</div>

{% endblock %}

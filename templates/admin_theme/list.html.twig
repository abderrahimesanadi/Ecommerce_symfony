{% extends 'admin_connected_base.html.twig' %}

{% block title %}Liste des templates disponibles !
{% endblock %}

{% block body %}
	<div class="bg-light p-3">
		<h3>Liste des templates disponibles:
		</h3>
	</div>
	{% set i = 0 %}
	<div class="row">
		{% for css,img in themes %}
			{% set i = i+1 %}
			<div class="col-md-4 mt-4">
				<div class="border border-success bg-light rounded p-2 clearfix">
					<h3 class="m-2">
						template
						{{i}}
						<br/>
						<span class="text-success p-1 align-center mt-2" width="50%">Free
						</span>
					</h5>
					<img class="img-fluid rounded" src="{{asset(img)}}" alt="Image du theme">
					<hr>
					<button onclick="changeTheme('{{css}}')" class="btn btn-success float-right">
						<i class="bi bi-vinyl"></i>
						Selectionner
					</button>
				</div>

			</div>
		{% endfor %}

		<div class="navigation">
			{{ knp_pagination_render(themes) }}
		</div>

	</div>
{% endblock %}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="initial-scale=1, width=device-width, viewport-fit=cover">

		<title>
			{% block title %}Bienvenue sur notre boutique
			{% endblock %}
		</title>
		{% block stylesheets %}

			<link rel="stylesheet" href="{{ asset('css/app.css') }}"/>
			<link rel="stylesheet" href="{{ asset('bootstrap.min.css') }}" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

			<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
			<link rel="stylesheet" href="{{ asset('bootstrap-icons/font/bootstrap-icons.css') }}"/>

		{% endblock %}
	</head>
	<body class="user">
		{% for message in app.flashes('notice') %}
			<div class="alert alert-dismissible alert-success">
				<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
				<strong>{{ message }}</strong>
			</div>
		{% endfor %}
		<nav class="navbar navbar-expand-lg navbar-dark bg-danger">
			<a class="navbar-brand" href="/">Boutique SANADI</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarColor03">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item active">
						<a class="nav-link" href="{{ path('products_index') }}">Produits
						</a>
					</li>
					
				</ul>
				<ul class="navbar-nav mr-auto ">
					<li class="nav-item ">
						{{ render(controller('App\\Controller\\BaseController::searchBar')) }}
					</li>
				</ul>
				<ul class="navbar-nav mr-auto ">
					<li class="nav-item ">
						<a class="btn btn-outline-success bg-white ml-2 rounded text-dark" href="{{ path('app_login_custmer') }}">
							<i class="bi bi-person-check-fill"></i>
							Connexion</a>
					</li>
					<li class="nav-item ">
						<a href="{{ path('app_register_custmer')}}" class="btn btn-outline-success bg-white ml-2 rounded text-dark">
							<i class="bi bi-person-fill-add"></i>
							Inscription</a>
					</li>
					<li class="nav-item active">
						<a class="nav-link" href="{{ path('cart_index') }}">
							<i class="bi bi-cart-fill"></i>
							Panier</a>
					</li>
				</ul>
			</div>
		</nav>
		<div class="container-fluid pt-3">
			{% for message in app.flashes('notice') %}
				<div class="flash-notice">
					{{ message }}
				</div>
			{% endfor %}
			<div class="row">
				<div class="col-md-4">
					{{ include('sidebar.html.twig', {'categories' : app.session.get('categories') }) }}
				</ul>
			</div>
			<div class="col-md-8">
				{% block body %}
					{{ include('product/list.html.twig', {'products' : products}) }}
				{% endblock %}
			</div>
		</div>
		{% block footer %}
			{{ include("footer.html.twig") }}
		{% endblock %}

		{% block javascripts %}
			<script type="text/javascript" src="{{asset('js/app.js')}}"></script>
		{% endblock %}
	</body>
</html>

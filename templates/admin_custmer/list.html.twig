{% extends 'admin_connected_base.html.twig' %}

{% block title %}Liste des clients disponibles !
{% endblock %}

{% block body %}
	<div class="bg-light p-3">
		<h3>Liste des clients :
		</h3>
	</div>
	<div class="ml-2 mt-2">
		<table class="table table-striped" style="color: #1d1e20;">
			<thead>
				<tr>
					<th scope="col">Nom</th>
					<th scope="col">Prenom</th>
					<th scope="col">Adresse de livraison</th>
					<th scope="col">Email</th>
					<th scope="col">Nombre de commandes</th>
				</tr>
			</thead>
			<tbody>
				{% for custmer in custmers %}
					<tr>
						<td>{{custmer.firstName}}}</td>
						<td>{{custmer.lastName}}</td>
						<td></td>
						<td>{{custmer.email }}</td>
						<td></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="navigation">
			{{ knp_pagination_render(custmers) }}
		</div>

	</div>
{% endblock %}
